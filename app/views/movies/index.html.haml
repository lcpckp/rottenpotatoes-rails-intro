-#  This file is app/views/movies/index.html.haml
%h1 All Movies


= form_tag movies_path, :method => :get, id: 'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @selected.include?("#{rating}")
  = submit_tag 'Refresh', id: 'ratings_submit'
  
%table#movies
  %thead
    %tr
      -if @hilite_title
        %th#title_header{class: "hilite"}= link_to "Movie Title", movies_path(:sort => 'title', :id => 'title_header')
      -else
        %th#title_header= link_to "Movie Title", movies_path(:sort => 'title', :id => 'title_header')

      
      %th Rating
      
      -if @hilite_release_date
        %th#release_date_header{class: "hilite"}= link_to "Release Date", movies_path(:sort => 'release_date', :id => 'release_date_header')
      -else
        %th#release_date_header= link_to "Release Date", movies_path(:sort => 'release_date', :id => 'release_date_header')

      
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
